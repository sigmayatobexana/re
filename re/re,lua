repeat task.wait(1) until game:IsLoaded()

local player = game:GetService("Players").LocalPlayer
local CoreGui = game:GetService("CoreGui")

-- –£–¥–∞–ª—è–µ–º —Å—Ç–∞—Ä—ã–π GUI
if CoreGui:FindFirstChild("SimpleBuilder") then
    CoreGui.SimpleBuilder:Destroy()
end

-- –°–æ–∑–¥–∞–µ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "SimpleBuilder"
ScreenGui.Parent = CoreGui
ScreenGui.ResetOnSpawn = false

-- –ö–Ω–æ–ø–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è
local CreateBtn = Instance.new("TextButton")
CreateBtn.Name = "CreateBtn"
CreateBtn.Size = UDim2.new(0, 200, 0, 60)
CreateBtn.Position = UDim2.new(0.5, -100, 0, 20)
CreateBtn.AnchorPoint = Vector2.new(0.5, 0)
CreateBtn.BackgroundColor3 = Color3.fromRGB(0, 100, 255)
CreateBtn.Text = "–°–û–ó–î–ê–¢–¨ –ë–õ–û–ö"
CreateBtn.TextSize = 18
CreateBtn.TextColor3 = Color3.new(1, 1, 1)
CreateBtn.Parent = ScreenGui

-- –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è
CreateBtn.MouseButton1Click:Connect(function()
    local character = player.Character
    if character and character:FindFirstChild("HumanoidRootPart") then
        local hrp = character.HumanoidRootPart
        
        -- –°–æ–∑–¥–∞–µ–º –æ–±—ä–µ–∫—Ç
        local part = Instance.new("Part")
        part.Name = "PlayerPart_"..player.Name
        part.Size = Vector3.new(5, 5, 5)
        part.Position = hrp.Position + Vector3.new(0, 10, 0)
        part.Anchored = true
        part.CanCollide = true
        part.BrickColor = BrickColor.new("Bright red")
        part.Material = Enum.Material.Neon
        part.Parent = workspace
        
        -- –£–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ
        game:GetService("StarterGui"):SetCore("SendNotification", {
            Title = "–£–°–ü–ï–•!",
            Text = "–ë–ª–æ–∫ —Å–æ–∑–¥–∞–Ω –Ω–∞–¥ –≤–∞–º–∏",
            Duration = 3
        })
        
        print("‚úÖ –ë–ª–æ–∫ —Å–æ–∑–¥–∞–Ω: "..tostring(part))
    else
        warn("‚ùå –ü–µ—Ä—Å–æ–Ω–∞–∂ –Ω–µ –Ω–∞–π–¥–µ–Ω!")
    end
end)

print("üöÄ –°–∫—Ä–∏–ø—Ç –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω! –ö–Ω–æ–ø–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –¥–æ—Å—Ç—É–ø–Ω–∞")
